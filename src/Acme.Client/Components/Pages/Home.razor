@page "/"
@inject ISubmissionApiService ApiService

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow">
                <div class="card-body p-4">
                    <h3 class="card-title text-center mb-3">Prize Draft</h3>
                    
                    <div class="alert alert-light border mb-4" role="alert">
                        <small class="d-block mb-1">✓ Must be at least 18 years old</small>
                        <small class="d-block">✓ Maximum 2 entries per serial number</small>
                    </div>

                    @if (!string.IsNullOrEmpty(_message))
                    {
                        <div class="alert @_alertClass alert-dismissible fade show" role="alert">
                            @_message
                        </div>
                    }

                    <EditForm FormName="SubmissionForm" Model="FormData" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger small mb-3" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName" class="form-label fw-semibold">First Name</label>
                                <InputText id="firstName" class="form-control" placeholder="John" @bind-Value="FormData.FirstName" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="lastName" class="form-label fw-semibold">Last Name</label>
                                <InputText id="lastName" class="form-control" placeholder="Doe" @bind-Value="FormData.LastName" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label fw-semibold">Email Address</label>
                            <InputText id="email" type="email" class="form-control" placeholder="you@example.com" @bind-Value="FormData.Email" />
                        </div>

                        <div class="mb-3">
                            <label for="dob" class="form-label fw-semibold">Date of Birth</label>
                            <InputDate id="dob" class="form-control" @bind-Value="FormData.DateOfBirth" />
                        </div>

                        <div class="mb-4">
                            <label for="serial" class="form-label fw-semibold">Serial Number</label>
                            <InputText id="serial" class="form-control" placeholder="XXXX-XXXX-XXXX-XXXX" @bind-Value="FormData.SerialNumber" />
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            Submit Entry
                        </button>
                    </EditForm>

                </div>
            </div>

        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm] 
    public SubmissionDto FormData { get; set; } = new();
    private string? _message;
    private string _alertClass = "alert-success";


    
    private async Task HandleSubmit()
    {
        try
        {
            await ApiService.SubmitAsync(FormData);
            _message = "Your entry has been submitted successfully!";
            _alertClass = "alert-success";
            FormData = new();
        }
        catch (Exception ex)
        {
            _message = $"An error occurred: {ex.Message}";
            _alertClass = "alert-danger";
        }
    }
}