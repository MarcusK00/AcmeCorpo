    }

    .blog-header {
        text-align: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f0f0f0;
    }

    .blog-header h1 {
        font-size: 2.5rem;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .intro-section {
        display: flex;
        gap: 2rem;
        align-items: flex-start;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .profile-photo {
        width: 250px;
        height: 250px;
    }

    .intro-text {
        flex: 1;
        min-width: 300px;
    }

    .lead {
        font-size: 1.25rem;
        color: #555;
